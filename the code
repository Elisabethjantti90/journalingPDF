          "Vad gör konflikter svåra för mig?",
          "Vilka gamla erfarenheter påverkar mina konflikter?",
          "Vad är jag rädd ska hända om jag säger min sanning?",
          "Hur vill jag att konflikter ska kännas?",
          "Vad är min intention i konflikt?",
          "Vilka konflikter upprepas i mitt liv?",
          "Vad behöver jag för att lyssna även när jag är upprörd?",
          "Hur uttrycker jag behov utan att attackera?",
          "Vilka gränser behöver jag i konflikt?",
          "Hur påverkar barndomen min konfliktstil?",
          "Hur vill jag bli bemött när jag är arg?",
          "Vilka ord hjälper mig hålla lugnet?",
          "Finns det en konflikt där jag vill be om förlåtelse?",
          "Vilken konflikt behöver mest tydlighet just nu?"
        ]
      }

    }; // <-- Här avslutas KATEGORIER

    function slumpa(array, antal) {
      const kopia = [...array];
      const resultat = [];
      const max = Math.min(antal, kopia.length);

      for (let i = 0; i < max; i++) {
        const index = Math.floor(Math.random() * kopia.length);
        resultat.push(kopia[index]);
        kopia.splice(index, 1);
      }
      return resultat;
    }

    async function skapaPdf() {
      const select = document.getElementById("kategoriSelect");
      const kategoriNyckel = select.value;

      if (!kategoriNyckel || !(kategoriNyckel in KATEGORIER)) {
        alert("Välj en giltig kategori först.");
        return;
      }

      const data = KATEGORIER[kategoriNyckel];
      const rubrik = data.rubrik;
      const frågor = data.frågor;
      const slumpade = slumpa(frågor, 10);

      const { jsPDF } = window.jspdf;
      const doc = new jsPDF({
        unit: "mm",
        format: "a4"
      });

      let y = 20;

      function addFooter() {
        doc.setFont("helvetica", "normal");
        doc.setFontSize(10);
        const footerText = "Mrs J – Body & Soul · www.mrsjbodyandsoul.com";
        const pageWidth = doc.internal.pageSize.getWidth();
        const textWidth = doc.getTextWidth(footerText);
        const x = (pageWidth - textWidth) / 2;
        doc.text(footerText, x, 285);
      }

      // Rubrik
      doc.setFont("helvetica", "bold");
      doc.setFontSize(18);
      doc.text(rubrik, 20, y);
      y += 12;

      doc.setFont("helvetica", "normal");
      doc.setFontSize(12);

      const lineHeight = 7;

      slumpade.forEach((fråga, index) => {
        const nummererad = (index + 1) + ". " + fråga;
        const maxWidth = 170;
        const rader = doc.splitTextToSize(nummererad, maxWidth);

        if (y + rader.length * lineHeight > 260) {
          addFooter();
          doc.addPage();
          y = 20;
        }

        rader.forEach(r => {
          doc.text(r, 20, y);
          y += lineHeight;
        });

        y += 3;
      });

      addFooter();

      const filnamn = `reflektionsfragor_${kategoriNyckel}.pdf`;
      doc.save(filnamn);
    }
  </script>
</section>

